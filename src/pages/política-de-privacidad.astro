---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Política de privacidad">
  <Navbar id="cabe" />
  <main class="frame-container">
    <div class="iframe-wrapper">
      <iframe
        class="centered-frame"
        src="https://docs.google.com/document/d/e/2PACX-1vSu-omDOh9KAyqhkbBZj9-g86Mglmv1qCBBrX4BhL4wqUqeafwfKB8yYWqtEBZWzg/pub?embedded=true"
        style="width: 100%; height: 800px;"
      ></iframe>
    </div>
  </main>
  
</Layout>

<style>
  html {
    background-color: #f2f2f2;
    font-family: sans-serif;
  }

  .frame-container {
    text-align: center;
    height: 100vh;
  }

  .iframe-wrapper {
    display: inline-block;
    max-width: 800px; /* Ajusta este valor según tus necesidades */
    width: 100%;
    max-height: 100%;
    overflow: auto;
    -webkit-box-shadow: 7px 10px 11px -8px rgba(0,0,0,0.36);
-moz-box-shadow: 7px 10px 11px -8px rgba(0,0,0,0.36);
box-shadow: 7px 10px 11px -8px rgba(0,0,0,0.36);
  }
</style>